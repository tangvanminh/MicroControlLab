#include "softwaretimer.h"

#define INTERUPTCYCLE 10

int timer0_flag = 0;
int timer1_flag = 0;
int timer2_flag = 0;

int timer0_count = 0;
int timer1_count = 0;
int timer2_count = 0;

void timer_run(){
	timer0_count--;
	timer1_count--;
	timer2_count--;

	if(timer0_count == 0) timer0_flag = 1;
	if(timer1_count == 0) timer1_flag = 1;
	if(timer2_count == 0) timer2_flag = 1;
}

void setTimer0_ms(int num){
	timer0_flag = 0;
	timer0_count = num/INTERUPTCYCLE;
}

void setTimer1_ms(int num){
	timer1_flag = 0;
	timer1_count = num/INTERUPTCYCLE;
}

void setTimer2_ms(int num){
	timer2_flag = 0;
	timer2_count = num/INTERUPTCYCLE;
}
